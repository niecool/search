<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mysql_dataSource" class="com.alibaba.druid.pool.DruidDataSource" init-method="init" destroy-method="close">

        <property name="driverClassName" value="${mysql-driverName}"/>
        <property name="url" value="${mysql-url}" />
        <property name="username" value="${mysql-username}"/>
        <property name="password" value="${mysql-password}"/>
        <!-- 初始化连接大小 -->
        <property name="initialSize" value="10" />
        <!-- 连接池最大使用连接数量 -->
        <property name="maxActive" value="20" />
        <!-- 连接池最小空闲 -->
        <property name="minIdle" value="1" />
        <property name="NotFullTimeoutRetryCount" value="3" />
        <!-- 连接池最大空闲 -->
        <property name="maxIdle" value="20" />
        <!-- 获取连接最大等待时间 -->
        <property name="maxWait" value="6000000" />
    </bean>

    <bean id="mysql_sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="mysql_dataSource"/>
        <property name="configLocation" value="classpath:mybatisMappers.xml"/>
    </bean>
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.nie.dao"/>
        <property name="sqlSessionFactoryBeanName" value="mysql_sqlSessionFactory"/>
    </bean>

    
</beans>